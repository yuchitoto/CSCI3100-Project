<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Code Block Login</title>
    <link href="/css/auth.css" rel="stylesheet" type="text/css">
    
  </head>
  <body>
    <%- include ('forum_header.ejs') %>
    <div class="login">
      <div class="block">
        <h2 style="text-align:center">Login</h2>
      </div>
      <div class="block">
        <form class="form" action= <%-"/login"%> method="post">
            <input class="input" name="name" placeholder="username/email"><br>
            <input class="input" name="password" placeholder="password"><br>
      </div>
      <div style="text-align: center;">
        <input type="submit" value="Login" />
        <p style="<%= (locals.miss)? 'display:block;color:red;':'display:none'%>">Please provide (username or email) and password</p>
      </div>
        </form>

  </div>
  </body>
</html>
